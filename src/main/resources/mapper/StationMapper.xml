<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="train.mapper.StationMapper">


    <select id="queryStationByCityCode" parameterType="int" resultType="Station">
        select station_name, c.city_name
        from station
                 join city c on station.city_code = c.city_code
        where c.city_code = ${city_code};
    </select>


</mapper>